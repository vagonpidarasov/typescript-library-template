{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": "last 2 versions, not ie < 11",
        "useBuiltIns": "usage",
        "modules": "commonjs",
        "corejs": {
          "version": "2.6",
          "proposals": true
        }
      }
    ],
    [
      "@babel/preset-typescript",
      {
        "isTSX": true,
        "allExtensions": true
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-transform-runtime",
    [
      "@babel/plugin-proposal-object-rest-spread",
      {
        "useBuiltIns": "usage"
      }
    ]
  ]
}
